pipeline { 
    environment { 
        registry = "engelko/devops-course" 
        registryCredential = 'dockerhub' 
        dockerImage = '' 
    }
    agent any 
    stages { 
        
        stage('Building our image') { 
            steps { 
                script { 
                    dockerImage = docker.build registry + ":${VERSION}_${BUILD_NUMBER}_${GIT_COMMIT}" 
                }
            } 
        }
        stage('Deploy our image') { 
            steps { 
                script { 
                    docker.withRegistry( '', registryCredential ) { 
                        dockerImage.push() 
                    }
                } 
            }
        } 
        stage('Cleaning up') { 
            steps { 
                sh "docker rmi $registry:$BUILD_NUMBER" 
            }
        } 
    }
}